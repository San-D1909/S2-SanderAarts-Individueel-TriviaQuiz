@using QuizApp.Models
@model ScoreboardInputModel

@{
    ViewBag.Title = "Scoreboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<h2> Scoreboard</h2>
<form>
    <div class="row mb-3">
        <div class="col-3">
            @Html.DropDownList("SelectedCategory",
     new SelectList(Enum.GetValues(typeof(ScoreboardInputModel.SelectedCategory))),
     "Select Category",
     new { @class = "form-control" })
        </div>
        <div class="col-3">
            @Html.DropDownList("SelectedDifficulty",
     new SelectList(Enum.GetValues(typeof(ScoreboardInputModel.SelectedDifficulty))),
     "Select Difficulty",
     new { @class = "form-control" })
        </div>
        <div class="col-3">
            @Html.DropDownList("SelectedTimeSpan",
     new SelectList(Enum.GetValues(typeof(ScoreboardInputModel.SelectedTimeSpan))),
     "Select TimeSpan",
     new { @class = "form-control" })
        </div>
        <div class="col-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</form>

<table>
    @{
        <tr>
            <th>User</th>
            <th>Score</th>
            <th>Date</th>
        </tr>
        List<ScoreBoardModel> scoreboard = Session["scoreboardList"] as List<ScoreBoardModel>;
        foreach (ScoreBoardModel score in scoreboard)
        {
            <tr>
                <td>@score.First_Name</td>
                <td>@score.Score</td>
                <td>@score.Date</td>
            </tr>
        }
    }
</table>

